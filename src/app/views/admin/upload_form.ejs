<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/stejne.css">
    <link rel="stylesheet" href="../css/upload_form.css">
    <title>SPŠ GALERIE</title>
</head>

<body>
    <header>
        <div id="zahlavi_logo">
            <div>
                <img id="logo" src="/imgLogo/logo-spstrutnov-4.svg" alt="">
            </div>
            <h1 id="hlavni_nadpis">SPŠ Galerie</h1>
        </div>
        
    </header>
    <main style="width:500px; margin:0 auto">
        <form id="myForm" action="/admin/sendImg" method="post" enctype="multipart/form-data">
            <label for="nadpis">Jméno projektu</label>
            <input name="nazev" type="text" id="projectName" class="form-control" required>
            <div>
                <label for="popis_short">Krátký popis</label>
                <textarea name="kratky_popis" id="desc_short" class="form-control" required></textarea>
            </div>
            <div>
                <label for="popis_full">Dlouhý popis</label>
                <textarea name="dlouhy_popis" id="desc_full" class="form-control" required></textarea>
            </div>
            <div class="col">
                <label for="author">Autor</label>
                <input name="autori" type="text" id="author" placeholder="Autoři" class="form-control" required>
            </div>
            <div id="tagy" class="row">
                <div class="col">
                    <label for="tags">Tagy</label>
                    <input name="tagy" type="text" id="tags" class="form-control" readonly>
                </div>
                <div class="col">
                    <label for="tags"> </label>
                    <select name="moznosti" class="form-control">
                        <option> </option>
                        <option value="1">Zkušební možnost 1</option>
                        <option value="2">Zkušební možnost 2</option>
                        <option value="3">Zkušební možnost 3</option>
                    </select>
                </div>
            </div>
            <div>
                <label for="pics">Vložte obrázky</label>
                <input class="form-control" type="file" accept=".jpg, .jpeg, .png" name="image" id="formFileMultiple"
                    multiple required>
            </div>
            <div id="uploadbutts">
                <div class="item">
                    <a href="/" class="btn btn-secondary" id="button1">Zrušit</a>
                </div>
                <div class="item" id="zalozit_butt">
                    <button type="submit" class="btn btn-primary" id="button2" >Založit</button> 
                </div>              
            </div>
        </form>


    </main>
    <footer>
        <div id= "footer">
            <p>By 4.EP 2022 & Jakub Šenkýř</p>
        </div>
    </footer>
</body>
<script>
    function SendInfo() {
        let allAreFilled = true;
        document.getElementById("myForm").querySelectorAll("[required]").forEach(function (i) {
            if (!allAreFilled) return;
            if (!i.value) allAreFilled = false;
        })
        if (!allAreFilled) {

        }
        if (allAreFilled) {
            fetch('/newArticle', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    name: projectName.value,
                    desc_short: desc_short.value,
                    desc_full: desc_full.value,
                    author: author.value,
                    tags: tags.value
                }),
            })
        }
    }
</script>

</html>