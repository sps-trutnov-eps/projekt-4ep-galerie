<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>SPŠ GALERIE</title>
</head>

<body>
    <header>

    </header>
    <main style="width:500px; margin:0 auto">
        <form id="myForm">
            <label for="nadpis">Jméno projektu</label>
            <input type="text" id="projectName" class="form-control" required>
            <div>
                <label for="popis_short">Krátký popis</label>
                <textarea id="desc_short" class="form-control" required></textarea>
            </div>
            <div>
                <label for="popis_full">Dlouhý popis</label>
                <textarea id="desc_full" class="form-control" required></textarea>
            </div>
            <div id="vytvoril" class="row">
                <div class="col">
                    <label for="author">Autor</label>
                    <input type="text" id="author" placeholder="Autoři" class="form-control" required>
                </div>
                <div class="col">
                    <label for="mail">Mail</label>
                    <input type="text" id="mail" placeholder="E-mail" class="form-control">
                </div>
            </div>
            <div id="tagy" class="row">
                <div class="col">
                    <label for="tags">Tagy</label>
                    <input type="text" id="tags" class="form-control" readonly>
                </div>
                <div class="col">
                    <label for="tags"> </label>
                    <select class="form-control">
                        <option> </option>
                        <option value="1">Zkušební možnost 1</option>
                        <option value="2">Zkušební možnost 2</option>
                        <option value="3">Zkušební možnost 3</option>
                    </select>
                </div>
            </div>
            <div>
                <label for="pics">Vložte obrázky</label>
                <input class="form-control" type="file" id="formFileMultiple" multiple required>
            </div>
            <div>
                <input type="checkbox" id="viditelny" class="form-check-input">
                <label for="viditelny">Vidět</label> <br>
            </div>
            <a href="/" class="btn btn-secondary">Zrušit</a>
            <button type="submit" class="btn btn-primary" onclick="SendInfo()">Založit</button>
        </form>


    </main>
    <footer>

    </footer>
</body>
<script>
    function SendInfo() {
        let allAreFilled = true;
        document.getElementById("myForm").querySelectorAll("[required]").forEach(function (i) {
            if (!allAreFilled) return;
            if (!i.value) allAreFilled = false;
        })
        if (!allAreFilled) {
            
        }
        if (allAreFilled){
            fetch('/newArticle', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        name: projectName.value,
                        desc_short: desc_short.value,
                        desc_full: desc_full.value,
                        author: author.value,
                        mail: mail.value,
                        tags: tags.value
                    }),
                });
        }
    }
</script>

</html>